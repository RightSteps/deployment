# Production Environment Variables
# Copy this to .env.production and fill in actual values

# Docker Configuration
DOCKER_USERNAME=your-dockerhub-username
IMAGE_TAG=latest

# Node Environment
NODE_ENV=production
PORT=5000

# Frontend URL
FRONTEND_URL=https://rightsteps.com

# Database Configuration
POSTGRES_USER=rightsteps_prod
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_64_CHARS
POSTGRES_DB=rightsteps_production
DATABASE_URL=postgresql://rightsteps_prod:CHANGE_THIS_STRONG_PASSWORD_64_CHARS@postgres:5432/rightsteps_production?schema=public

# Read Replica (if using separate read DB)
READ_DATABASE_URL=postgresql://rightsteps_prod:CHANGE_THIS_STRONG_PASSWORD_64_CHARS@postgres:5432/rightsteps_production?schema=public

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_STRONG_REDIS_PASSWORD_64_CHARS

# JWT Secrets (Generate with: openssl rand -base64 64)
JWT_SECRET=CHANGE_THIS_JWT_SECRET_MINIMUM_64_CHARACTERS_RANDOM_STRING
JWT_REFRESH_SECRET=CHANGE_THIS_JWT_REFRESH_SECRET_MINIMUM_64_CHARACTERS_RANDOM_STRING
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=CHANGE_THIS_SESSION_SECRET_64_CHARS
SESSION_MAX_AGE=86400000

# Email Configuration (SendGrid/Resend)
EMAIL_PROVIDER=sendgrid
EMAIL_API_KEY=your_sendgrid_api_key
EMAIL_FROM=noreply@rightsteps.com
EMAIL_FROM_NAME=RightSteps

# OAuth - Google
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=https://api.rightsteps.com/v1/auth/google/callback

# OAuth - Facebook
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
FACEBOOK_CALLBACK_URL=https://api.rightsteps.com/v1/auth/facebook/callback

# Payment - Stripe
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_SUCCESS_URL=https://rightsteps.com/payment/success
STRIPE_CANCEL_URL=https://rightsteps.com/payment/cancel

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,application/pdf

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=https://rightsteps.com,https://www.rightsteps.com

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/rightsteps/app.log

# Monitoring
SENTRY_DSN=
SENTRY_ENVIRONMENT=production

# Feature Flags
ENABLE_SIGNUP=true
ENABLE_OAUTH=true
ENABLE_TWO_FACTOR=true
