# Development Environment Variables
# Copy this to .env.dev and fill in actual values

# Docker Configuration
DOCKER_USERNAME=your-dockerhub-username
IMAGE_TAG=dev-latest

# Node Environment
NODE_ENV=development
PORT=5000

# Frontend URL
FRONTEND_URL=https://dev.rightsteps.com

# Database Configuration
POSTGRES_USER=rightsteps_dev
POSTGRES_PASSWORD=dev_password_123
POSTGRES_DB=rightsteps_dev
DATABASE_URL=postgresql://rightsteps_dev:dev_password_123@postgres:5432/rightsteps_dev?schema=public
READ_DATABASE_URL=postgresql://rightsteps_dev:dev_password_123@postgres:5432/rightsteps_dev?schema=public

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=dev_redis_123

# JWT Secrets (Can use simple ones for dev)
JWT_SECRET=dev_jwt_secret_not_for_production
JWT_REFRESH_SECRET=dev_jwt_refresh_secret_not_for_production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=dev_session_secret
SESSION_MAX_AGE=86400000

# Email Configuration (Use test/log only)
EMAIL_PROVIDER=sendgrid
EMAIL_API_KEY=test_api_key
EMAIL_FROM=dev@rightsteps.com
EMAIL_FROM_NAME=RightSteps Dev

# OAuth - Google (Development)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=https://dev-api.rightsteps.com/v1/auth/google/callback

# OAuth - Facebook (Development)
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
FACEBOOK_CALLBACK_URL=https://dev-api.rightsteps.com/v1/auth/facebook/callback

# Payment - Stripe (Test mode)
STRIPE_SECRET_KEY=sk_test_dev_key
STRIPE_PUBLISHABLE_KEY=pk_test_dev_key
STRIPE_WEBHOOK_SECRET=whsec_test_dev
STRIPE_SUCCESS_URL=https://dev.rightsteps.com/payment/success
STRIPE_CANCEL_URL=https://dev.rightsteps.com/payment/cancel

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,application/pdf

# Rate Limiting (Relaxed for dev)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# CORS (Allow all for dev)
CORS_ORIGIN=*

# Logging
LOG_LEVEL=debug
LOG_FILE_PATH=/var/log/rightsteps/dev.log

# Monitoring
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# Feature Flags
ENABLE_SIGNUP=true
ENABLE_OAUTH=false
ENABLE_TWO_FACTOR=false
