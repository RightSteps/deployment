# Staging Environment Variables
# Copy this to .env.staging and fill in actual values

# Docker Configuration
DOCKER_USERNAME=your-dockerhub-username
IMAGE_TAG=staging-latest

# Node Environment
NODE_ENV=staging
PORT=5000

# Frontend URL
FRONTEND_URL=https://staging.rightsteps.com

# Database Configuration
POSTGRES_USER=rightsteps_staging
POSTGRES_PASSWORD=CHANGE_THIS_STAGING_PASSWORD
POSTGRES_DB=rightsteps_staging
DATABASE_URL=postgresql://rightsteps_staging:CHANGE_THIS_STAGING_PASSWORD@postgres:5432/rightsteps_staging?schema=public
READ_DATABASE_URL=postgresql://rightsteps_staging:CHANGE_THIS_STAGING_PASSWORD@postgres:5432/rightsteps_staging?schema=public

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_STAGING_REDIS_PASSWORD

# JWT Secrets
JWT_SECRET=staging_jwt_secret_change_this_64_chars
JWT_REFRESH_SECRET=staging_jwt_refresh_secret_change_this_64_chars
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=staging_session_secret_change_this
SESSION_MAX_AGE=86400000

# Email Configuration (Use test mode)
EMAIL_PROVIDER=sendgrid
EMAIL_API_KEY=your_sendgrid_test_api_key
EMAIL_FROM=staging@rightsteps.com
EMAIL_FROM_NAME=RightSteps Staging

# OAuth - Google (Use test credentials)
GOOGLE_CLIENT_ID=your_google_test_client_id
GOOGLE_CLIENT_SECRET=your_google_test_client_secret
GOOGLE_CALLBACK_URL=https://staging-api.rightsteps.com/v1/auth/google/callback

# OAuth - Facebook (Use test credentials)
FACEBOOK_APP_ID=your_facebook_test_app_id
FACEBOOK_APP_SECRET=your_facebook_test_app_secret
FACEBOOK_CALLBACK_URL=https://staging-api.rightsteps.com/v1/auth/facebook/callback

# Payment - Stripe (Use test mode)
STRIPE_SECRET_KEY=sk_test_your_stripe_test_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_test_key
STRIPE_WEBHOOK_SECRET=whsec_test_webhook_secret
STRIPE_SUCCESS_URL=https://staging.rightsteps.com/payment/success
STRIPE_CANCEL_URL=https://staging.rightsteps.com/payment/cancel

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,application/pdf

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200

# CORS
CORS_ORIGIN=https://staging.rightsteps.com,https://staging-admin.rightsteps.com

# Logging
LOG_LEVEL=debug
LOG_FILE_PATH=/var/log/rightsteps/staging.log

# Monitoring
SENTRY_DSN=
SENTRY_ENVIRONMENT=staging

# Feature Flags
ENABLE_SIGNUP=true
ENABLE_OAUTH=true
ENABLE_TWO_FACTOR=true
